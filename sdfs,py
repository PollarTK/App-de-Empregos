import customtkinter as ctk


class CardApp:
    def __init__(self):
        self.app = ctk.CTk()
        self.setup_ui()

    def setup_ui(self):
        # Configuração da janela principal
        self.app.title("Card Frame Exemplo")
        self.app.geometry("500x500")
        self.app.minsize(400, 400)

        # Container principal com scroll
        self.main_frame = ctk.CTkScrollableFrame(self.app)
        self.main_frame.pack(fill="both", expand=True, padx=20, pady=20)

        # Criar múltiplos cards
        for i in range(3):
            self.create_card(f"Card {i+1}")

    def create_card(self, title):
        # Frame do card com estilo
        card = ctk.CTkFrame(
            self.main_frame,
            width=400,
            height=200,
            corner_radius=10,
            border_width=1,
            border_color="#444"
        )
        card.pack_propagate(False)
        card.pack(pady=15, fill="x")

        # Header do card
        header = ctk.CTkFrame(card, fg_color="transparent")
        header.pack(fill="x", padx=10, pady=10)

        ctk.CTkLabel(
            header,
            text=title,
            font=("Arial", 14, "bold")
        ).pack(side="left")

        # Corpo do card
        body = ctk.CTkLabel(
            card,
            text="Este é um conteúdo de exemplo que deve ficar contido dentro do frame do card.",
            wraplength=380,
            justify="left"
        )
        body.pack(pady=5, padx=10)

        # Rodapé do card
        footer = ctk.CTkFrame(card, fg_color="transparent")
        footer.pack(side="bottom", fill="x", pady=5)

        ctk.CTkButton(
            footer,
            text="Ação",
            width=80
        ).pack(side="right", padx=10)


if __name__ == "__main__":
    CardApp().app.mainloop()
